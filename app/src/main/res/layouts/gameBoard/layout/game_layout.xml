<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gameView"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">
        <include
            layout="@layout/nav_layout"
            android:id="@+id/navPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            android:paddingVertical="4dp">

        </include>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gameBoardLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/navPanel"
            app:layout_constraintEnd_toEndOf="@id/playerStat"
            app:layout_constraintTop_toBottomOf="@id/navPanel"
            app:layout_constraintBottom_toTopOf="@id/playerStat"
            android:background="#000000">
            <include
                layout="@layout/checkers_board"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintHeight_percent="0.9"
                >
            </include>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            layout="@layout/stat_layout"
            android:id = "@+id/playerStat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/gameBoardLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="23dp">
        </include>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
