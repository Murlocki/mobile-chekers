<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/playerMoveText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textFieldText="Ход игрока"
        >
    </com.example.mobilecheckers.customComponents.StatTextField>
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/playerMoveCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textFieldText="Количество ходов">
    </com.example.mobilecheckers.customComponents.StatTextField>
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/whiteCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textFieldText="Белых осталось"
        >
    </com.example.mobilecheckers.customComponents.StatTextField>
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/blackCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textFieldText="Черных осталось"
        >
    </com.example.mobilecheckers.customComponents.StatTextField>

</LinearLayout>
