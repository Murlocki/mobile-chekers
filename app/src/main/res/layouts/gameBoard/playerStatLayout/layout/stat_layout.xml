<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/playerMoveText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textFieldText="@string/player_current_turn_text"
        >
    </com.example.mobilecheckers.customComponents.StatTextField>
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/playerMoveCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textFieldText="@string/turn_count_text">
    </com.example.mobilecheckers.customComponents.StatTextField>
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/whiteCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textFieldText="@string/while_left_text"
        >
    </com.example.mobilecheckers.customComponents.StatTextField>
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/blackCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textFieldText="@string/black_left_text"
        >
    </com.example.mobilecheckers.customComponents.StatTextField>

</LinearLayout>
