<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:constraintLayoutTools="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:paddingHorizontal="40dp"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    android:orientation="vertical"
    android:gravity="center"
    >
    <androidx.cardview.widget.CardView
        android:layout_height="@dimen/profile_avatar_height"
        android:layout_width="@dimen/profile_avatar_width"
        constraintLayoutTools:cardCornerRadius="@dimen/profile_avatar_border_radius"
        android:layout_marginBottom="@dimen/profile_avatar_image_margin_bottom"
        >
        <ImageView
            android:id="@+id/avatarPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/checker_logo"
            android:contentDescription="@string/logo_desc"
            android:scaleType="centerCrop"
            android:background="@color/default_text_color"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/default_player_name"
        android:textSize="@dimen/profile_avatar_nickname_font_size"
        android:textAlignment="center"
        android:background="@color/default_background_color"
        android:textColor="@color/default_text_color"
        android:layout_marginBottom="@dimen/profile_avatar_nickname_margin_bottom"
        android:maxLines="3"
        android:lineSpacingExtra="4dp"
        android:ellipsize="none"
        android:breakStrategy="simple"
        android:hyphenationFrequency="full">
    </TextView>
</LinearLayout>
