<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/default_background_color"
    >
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/playerWinsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:textFieldText="@string/player_wins_text">
    </com.example.mobilecheckers.customComponents.StatTextField>
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/playerLoseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:textFieldText="@string/player_loses_text">
    </com.example.mobilecheckers.customComponents.StatTextField>
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/playerMeanMovesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:textFieldText="@string/player_mean_turn_count_text"
        >

    </com.example.mobilecheckers.customComponents.StatTextField>

</LinearLayout>
