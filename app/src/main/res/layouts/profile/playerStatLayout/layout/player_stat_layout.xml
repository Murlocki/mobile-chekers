<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#000000"
    >
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/playerWinsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textFieldText="Количество побед">
    </com.example.mobilecheckers.customComponents.StatTextField>
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/playerLoseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textFieldText="Количество поражений">
    </com.example.mobilecheckers.customComponents.StatTextField>
    <com.example.mobilecheckers.customComponents.StatTextField
        android:id="@+id/playerMeanMovesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textFieldText="Среднее количество ходов"
        >

    </com.example.mobilecheckers.customComponents.StatTextField>

</LinearLayout>
